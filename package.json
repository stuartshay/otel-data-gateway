{
  "name": "otel-data-gateway",
  "version": "1.0.0",
  "description": "Apollo Server GraphQL BFF gateway for otel-data-api",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run codegen && tsc && cp src/schema/schema.graphql dist/schema/schema.graphql",
    "build:types-package": "npm run codegen && cp src/schema/schema.graphql packages/graphql-types/schema.graphql",
    "start": "node dist/index.js",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\"",
    "lint:sh": "if [ \"$CI\" = \"true\" ]; then shellcheck *.sh; else shellcheck *.sh || echo '⚠️  Warning: shellcheck reported issues'; fi",
    "lint:spell": "cspell --no-progress --no-summary --gitignore \"src/**/*.ts\" \"src/schema/**/*.graphql\" \"*.md\" \"package.json\" \"tsconfig*.json\" \"Dockerfile\" \"Makefile\" \".github/**/*.yml\"",
    "lint:all": "npm run lint && npm run lint:md && npm run lint:sh && npm run lint:spell",
    "format": "prettier --write \"src/**/*.ts\" \"**/*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"**/*.md\"",
    "type-check": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm run test -- --watch",
    "prepare": "husky"
  },
  "keywords": [
    "graphql",
    "apollo-server",
    "bff",
    "gateway",
    "otel",
    "opentelemetry"
  ],
  "author": "Stuart Shay",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.4.0",
    "@as-integrations/express5": "^1.1.2",
    "@stuartshay/otel-data-types": "^1.0.114",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typescript": "^5.0.8",
    "@graphql-codegen/typescript-resolvers": "^5.1.6",
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "cspell": "^9.6.4",
    "eslint": "^9.39.3",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.21.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ]
  }
}
